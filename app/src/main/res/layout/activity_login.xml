<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground">

    <RelativeLayout
        android:id="@+id/progress_bar_login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar_login"
            style="?android:attr/progressBackgroundTintMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminateDrawable="@drawable/mydialog" />

        <TextView
            android:id="@+id/progress_bar_login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progress_bar_login"
            android:background="#00000000"
            android:text="@string/login_in_message"
            android:textColor="@color/Grey"
            android:textSize="20sp"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preview_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bindup" />

    <ImageView
        android:id="@+id/preview_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_card" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preview_logo">

        <EditText
            android:id="@+id/email_enter_for_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="enter email"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/password_enter_for_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_enter_for_login"
            android:layout_centerHorizontal="true"
            android:hint="enter password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_enter_for_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_onclick_grey"
            android:text="Login"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_registration"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_onclick_grey"
            android:text="Registration"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

</RelativeLayout>
