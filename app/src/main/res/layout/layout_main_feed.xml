<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardElevation="1dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:id="@+id/my_vcard_preview_company_logo"
                android:src="@drawable/ic_person"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_vcard_preview_company_logo"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mitch"
                    android:id="@+id/my_vcard_name"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:gravity="start"/>

                <TextView
                    android:layout_toRightOf="@+id/my_vcard_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interested In:"
                    android:id="@+id/my_vcard_surname"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:id="@+id/my_vcard_company"
                    android:layout_below="@+id/my_vcard_name"
                    android:layout_marginTop="4dp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single"
                    android:id="@+id/my_vcard_position"
                    android:layout_below="@+id/my_vcard_surname"
                    android:layout_toRightOf="@+id/my_vcard_company"
                    android:layout_marginTop="4dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>